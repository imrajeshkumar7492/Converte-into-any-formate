{
  "dashboard": {
    "id": null,
    "title": "Converte Pro Dashboard",
    "tags": ["converte", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Job Status Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "converte_jobs_total{status=\"completed\"}",
            "legendFormat": "Completed"
          },
          {
            "expr": "converte_jobs_total{status=\"failed\"}",
            "legendFormat": "Failed"
          },
          {
            "expr": "converte_jobs_total{status=\"processing\"}",
            "legendFormat": "Processing"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Job Processing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(converte_jobs_total[5m])",
            "legendFormat": "Jobs/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "File Processing Size",
        "type": "graph",
        "targets": [
          {
            "expr": "converte_files_processed_bytes_total",
            "legendFormat": "Total Bytes Processed"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(converte_jobs_total{status=\"failed\"}[5m]) / rate(converte_jobs_total[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Queue Length",
        "type": "graph",
        "targets": [
          {
            "expr": "converte_queue_length",
            "legendFormat": "Queue Length"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}