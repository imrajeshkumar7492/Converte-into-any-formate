{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "INFO",
        "CORS_ORIGINS": "https://converter.imrajeshkumar7492.dev,https://imrajeshkumar7492.github.io"
      }
    },
    "staging": {
      "variables": {
        "ENVIRONMENT": "staging", 
        "LOG_LEVEL": "DEBUG",
        "CORS_ORIGINS": "https://staging-converter.imrajeshkumar7492.dev"
      }
    }
  }
}